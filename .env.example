# AIOS Environment Configuration
# Copy this file to .env and fill in your values

# LLM Provider Selection: "openai" or "anthropic"
LLM_PROVIDER=openai

# OpenAI API Key (required if using OpenAI)
OPENAI_API_KEY=sk-proj-your-key-here

# Anthropic API Key (required if using Claude)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# API Server Configuration
AIOS_DEBUG=false
AIOS_PORT=8000
AIOS_HOST=0.0.0.0

# Supabase (required for Knowledge Layer)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Knowledge Layer API
KB_PORT=3001

# =============================================================================
# ENTERPRISE SECURITY (P0)
# =============================================================================

# Authentication Mode: production, staging, development, test
# IMPORTANT: production mode requires OIDC/SAML configuration
AIOS_AUTH_MODE=development

# OIDC Configuration (Azure AD, Okta, Auth0, etc.)
AIOS_OIDC_ISSUER=
AIOS_OIDC_CLIENT_ID=
AIOS_OIDC_CLIENT_SECRET=
AIOS_OIDC_JWKS_URI=
AIOS_OIDC_AUDIENCE=

# SAML Configuration (if using SAML instead of OIDC)
AIOS_SAML_IDP_METADATA=
AIOS_SAML_SP_ENTITY_ID=
AIOS_SAML_SP_ACS_URL=

# Development Auth (ONLY for non-production environments)
# WARNING: Set to false in production
AIOS_ALLOW_HEADER_AUTH=true

# =============================================================================
# GROUNDING ENFORCEMENT
# =============================================================================

# Enable/disable grounding enforcement
AIOS_GROUNDING_ENABLED=true

# Minimum grounding score for response delivery (0.0-1.0)
AIOS_GROUNDING_MIN_SCORE=0.5

# Require at least one verified source
AIOS_GROUNDING_REQUIRE_VERIFIED=false

# Warning threshold for borderline responses
AIOS_GROUNDING_WARN_THRESHOLD=0.7

# =============================================================================
# AUDIT LOGGING
# =============================================================================

# Enable/disable audit logging
AIOS_AUDIT_ENABLED=true

# Storage type: file (development) or postgres (production)
AIOS_AUDIT_STORAGE_TYPE=file

# File storage path (for development)
AIOS_AUDIT_STORAGE_PATH=data/audit

# =============================================================================
# AZURE AD SPECIFIC (if using Azure AD)
# =============================================================================

# Azure AD Tenant ID (instead of full OIDC issuer URL)
# AZURE_AD_TENANT_ID=your-tenant-id

# =============================================================================
# OKTA SPECIFIC (if using Okta)
# =============================================================================

# Okta Domain (e.g., dev-123456.okta.com)
# OKTA_DOMAIN=
